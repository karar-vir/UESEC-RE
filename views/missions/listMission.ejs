<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Missions</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/header') %>

  <h1>Mission Log</h1>

  <table>
    <thead>
      <tr>
        <th>Mission ID</th>
        <th>Ship Assigned</th>
        <th>Destination</th>
        <th>Purpose</th>
        <th>Date</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% missions.forEach(mission => { %>
        <tr>
          <td><%= mission.missionId %></td>
          <td><%= mission.shipAssigned?.name || 'N/A' %></td>
          <td><%= mission.destinationPlanet %></td>
          <td><%= mission.missionPurpose %></td>
          <td><%= new Date(mission.missionDate).toDateString() %></td>
          <td>
            <!-- Delete Button -->
            <form action="/api/missions/<%= mission._id %>?_method=DELETE" method="POST" style="display:inline;">
              <button type="submit" class="delete-btn">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

</body>
</html>
